      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-8">
              <div class="card">
                <div class="card-header card-header-warning">
                  <h4 class="card-title"><%= event[0].eventName %></h4>
                  <p class="card-category">Details of the Event</p>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-4">
                      <div class="form-group">
                        <label class="bmd-label-floating">Event: <strong><%= event[0].eventName %></strong></label>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="form-group">
                        <label class="bmd-label-floating">Event: <strong><%= event[0].eventVenue %></strong></label>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label class="bmd-label-floating">Date and Time : <strong><%= event[0].eventDateTime %></strong></label>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <% let nabilin = event[0].num_Tickets - event[0].tickets_Sold %>
                        <label class="bmd-label-floating">Tickets Left:<strong><%= nabilin %> tickets </strong></label>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="bmd-label-floating">Price Per Ticket: <strong>Php. <%= event[0].eventPrice %></strong></label>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label class="bmd-label-floating"><strong>Description: </strong><%= event[0].descript %></label>
                       
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card card-profile">
                <div class="card-avatar">
                  <a href="#pablo">
                    <img class="img" src="/assets2/img/new_logo.png" />
                  </a>
                </div>
                <div class="card-body">
                  <h6 class="card-category">What do you wanna do with this item in cart</h6>
                  <h4 class="card-title"><%= event[0].eventName%></h4>
                  <br>
                  <form action="/editTicket" method="POST">
                    <div class="row">
                      <div class="col-md-5">
                         <div class="form-group">
                           <label class="bmd-label-floating">Number of Tickets</label>
                           <input id="num" name="qty" class="form-control" type="number" oninput="calc()" value="<%=ticket[0].qty%>"/>
                         </div>
                       </div>
                       <div class="col-md-5">
                        <div class="form-group">
                          <label class="bmd-label-floating">Price Per Ticket: <strong>Php. <span id="ticket_price"><%= event[0].eventPrice %></span></label>
                            
                        </div>
                      </div>
                    </div>
                       <br>
                       
                     <div class="row">
                      <div class="col-md-5">
                        <div class="form-group">
                          <label class="bmd-label-floating">Subtotal: <strong>Php. <span id="total"></span></strong></label>
                        </div>
                      </div>
                      <div class="col-md-5">
                        <div class="form-group">
                          <label class="bmd-label-floating">Make a purchase or keep in cart </label>
                          <select class="form-control" name="isPurchased" >
                            <option >Pick an option</option>
                            <option value="0">Keep in Cart</option>
                            <option value="1">Make a purchase</option>
                          </select>
                        </div>
                      </div>
                    </div>
                    <h3 class="d-lg-none">Total sales from previous<span id="totality"><%= event[0].total_Sales %></span></h3>
                    <h3 class="d-lg-none">Total tickets sold from previous<span id="tickSold"><%= event[0].tickets_Sold %></span></h3>
                    <input type="hidden" name="total_Sales" id="hiddenSales"/>
                    <input type="hidden" name="tickets_Sold" id="hiddenTick" />
                    <input type="hidden" name="event_ID" value="<%= event[0].event_ID%>" />
                    <input type="hidden" name="ticket_ID" value="<%= ticket[0].ticket_ID%>" />
                    <button type="submit" class="btn btn-warning pull-left">Submit</button>
                  </form>
                 
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <script>
        function calc(){
          //i am taking the values of our price which is hardcoded na HTML
          var price = document.getElementById("ticket_price").innerHTML;
          //i am taking the user input value of our quantity
          var noTickets = document.getElementById("num").value;

          //multiplying the 2 to get the subtotal
          var total = parseFloat(price) * noTickets;

          //here I am simply getting the previous totalSales nato 
          var prevSales = document.getElementById("totality").innerHTML;
          //i am adding the previous sales with the current para mu-add on ra sila to each other
          var totalNow = parseFloat(prevSales)+total;

          var prevTicket = document.getElementById("tickSold").innerHTML;
          var totalTickets = parseFloat(prevTicket)+parseFloat(noTickets);
          
              if (!isNaN(total)){
                document.getElementById("total").innerHTML = total;
                document.getElementById("hiddenSales").setAttribute('value',totalNow);
                document.getElementById("hiddenTick").setAttribute('value',totalTickets);
              }
          }
      </script>
