            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title ">Total Sales</h4>
                  <p class="card-category"> Here is the rundown</p>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table">
                      <thead class=" text-primary">
                        <th>
                          Event Name
                        </th>
                        <th>
                          Venue
                        </th>
                        <th>
                          Date and Time
                        </th>
                        <th>
                          Price Per Ticket
                        </th>
                        <th>
                          Tickets Sold
                        </th>
                        <th>
                          Total Sales
                        </th>
                      </thead>
                      <tbody>
                        <!-- <tr>
                         
                          <td>
                            Dakota Rice
                          </td>
                          <td>
                            Niger
                          </td>
                          <td>
                            Oud-Turnhout
                          </td>
                          <td>
                            40
                          </td>
                          <td class="text-primary">
                            $36,738
                          </td>
                        </tr> -->
                        <% if (rows.length == 0){%>
                          <tr><td></td><td></td><td>No contents yet</td></tr>
                     <%}else{%>
                          <% rows.forEach(function (row) {%>
                             <tr>
                               <td><%= row.eventName %></td>
                               <td><%= row.eventVenue %></td>
                               <td><%= row.eventDateTime %></td>
                               <td>Php.<%= row.eventPrice %></td>
                               <td><%= row.tickets_Sold %> tickets</td>
                               <td>Php.<%= row.total_Sales %></td>
                               <td>
                                <a title="Remove Event" class="btn btn-white btn-link btn-sm" href="deleteEvent/<%= row.event_ID%>">
                                  <i class="material-icons">close</i>
                                </a>
                               </td>
                               <td>
                                <a title="Edit Event" class="btn btn-white btn-link btn-sm" href="editEvent/<%= row.event_ID%>">
                                  <i class="material-icons">edit</i>
                                </a>
                               </td>
                             </tr>
                           <% }) %>
                     <%}%>
                       
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-12">
              <div class="card card-plain">
                <div class="card-header card-header-primary">
                  <h4 class="card-title mt-0"> Add another event</h4>
                  <p class="card-category"> Go ahead! Make your day!</p>
                </div>
                <div class="card-body">
                  
                    <form action="/adminEvent" method="POST">
                      <div class="row">
                       <div class="col-md-3">
                          <div class="form-group">
                            <label class="bmd-label-floating">Event Name</label>
                            <input type="text" name="eventName" class="form-control">
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <label class="bmd-label-floating">Event Date</label>
                            <input type="datetime-local" class="form-control"  name="eventDateTime" value="2018-06-12T19:30"
                            min="2020-09-27T00:00" max="2020-10-14T00:00">
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-4">
                          <div class="form-group">
                            <label class="bmd-label-floating">Price in Php.</label>
                            <input type="number" class="form-control" name="eventPrice">
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <label class="bmd-label-floating">Capacity of the event</label>
                            <input type="number" class="form-control" name="num_Tickets">
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-10">
                          <div class="form-group">
                            <label class="bmd-label-floating">Venue</label>
                            <input type="text" class="form-control" name="eventVenue">
                          </div>
                        </div>
                      </div>
                    
                      <div class="row">
                        <div class="col-md-10">
                          <div class="form-group">
                            <div class="form-group">
                              <label class="bmd-label-floating">Event Description</label>
                              <textarea class="form-control" rows="5" name="descript"></textarea>
                            </div>
                          </div>
                        </div>
                      </div>
                      <button type="submit" class="btn btn-primary pull-right">Submit</button>
                      <div class="clearfix"></div>
                    </form>
                  
                </div>
              </div>
            </div>
