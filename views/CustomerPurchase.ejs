          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title ">Total Cost</h4>
                  <p class="card-category"> Here is a breakdown of your total expenses per event</p>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table">
                      <thead class=" text-primary">
                        <th>
                          ID
                        </th>
                        <th>
                          Event
                        </th>
                        <th>
                          Venue
                        </th>
                        <th>
                          Date and Time
                        </th>
                        <th>
                          Price of Tickets
                        </th>
                        <th>
                          Num. of Tickets Bought
                        </th>
                        <th>
                          Total Cost
                        </th>
                      </thead>
                      <tbody>
                        <% let total=0 %>
                          <!--This is where we would loop for the events offered-->
                          <% purchase.forEach((purchase)=>{ %>
                           
                            <tr>
                              <td><%=purchase.event_ID%></td>
                              <td><%=purchase.eventName%></td>
                              <td><%=purchase.eventVenue%></td>
                              <td><%=purchase.eventDateTime%></td>
                              <td>Php.<%= purchase.eventPrice %></td>
                              <td><%= purchase.qty %></td>
                              <% let x = purchase.qty*purchase.eventPrice %>
                              <td>Php. <%= x %></td>
                              <% total+=x %>
                            </tr>
                       
                        <%  }) %> 
                            <tr><strong>Total of all Purchases: </strong>Php.<%= total %></tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-12">
              <div class="card ">
                <div class="card-header card-header-primary">
                  <h4 class="card-title mt-0"> List of Tickets</h4>
                  <p class="card-category"> See all of your individual tickets here</p>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead class="text-primary">
                        <th>
                          Ticket ID
                        </th>
                        <th>
                          Event
                        </th>
                        <th>
                          Venue
                        </th>
                        <th>
                          Date and Time
                        </th>
                      </thead>
                      <tbody>
                        <% purchase.forEach((purchase)=>{ %>
                          <% for(let x=0; x< purchase.qty ; x++){ %>
                              <tr>
                                <td>AA<%= x %></td>
                                <td><%= purchase.eventName %></td>
                                <td><%= purchase.eventVenue %></td>
                                <td><%= purchase.eventDateTime %></td>
                              </tr>
                          <% } %>
                       <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
